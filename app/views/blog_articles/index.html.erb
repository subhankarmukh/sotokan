<p id="notice"><%= notice %></p>

<h1>Listing Blog Articles</h1>

<% if can? :create, BlogArticle.new %>
  <div id="btn_container_new_blog_post">
    <p class="text-right">
      <%= link_to 'New Blog article', new_blog_article_path, class: 'btn btn-primary' %>
    </p>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th class="text-center">Owner</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blog_articles.each do |blog_article| %>
      <tr>
        <td><%= blog_article.title %></td>
        <td><%= blog_article.description %></td>
        <td class="text-center"><%= link_to blog_article.user.email, "mailto:#{blog_article.user.email}" %></td>
        <td class="text-center"><%= link_to 'Show', blog_article %></td>
        <td class="text-center"><%= link_to 'Edit', edit_blog_article_path(blog_article) if (can? :upate, blog_article) %></td>
        <td class="text-center"><%= link_to 'Destroy', blog_article, method: :delete, data: { confirm: 'Are you sure?' } if (can? :destroy, blog_article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


